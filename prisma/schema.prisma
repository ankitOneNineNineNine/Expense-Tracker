generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Category {
  id   String @id @default(uuid())
  name  String
  createdAt DateTime @default(now()) 
  expenses Expense[]
}

model Expense {
  id   String @id @default(uuid())
  createdAt DateTime @default(now())
  title String
  amount Decimal
  tag String
  category  Category?  @relation(fields: [categoryId], references: [id])
  categoryId  String?
}